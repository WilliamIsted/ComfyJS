{
	"compilerOptions": {
		"outDir": "./build",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "types",
		"strict": true,
		"target": "ES6",
		"lib": [
			"ES6",
			"DOM"
		],
		"module": "CommonJS",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
